{
    "name": "@jpapini/deepkit-type-plugins",
    "version": "1.1.0",
    "description": "Plugins for using Deepkit type with Vite.js and Esbuild.",
    "keywords": [
        "jpapini",
        "deepkit",
        "deepkit-type",
        "vite",
        "esbuild",
        "plugins"
    ],
    "homepage": "https://github.com/jpapini/shared-packages/tree/main/packages/deepkit-type-plugins#readme",
    "bugs": {
        "url": "https://github.com/jpapini/shared-packages/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jpapini/shared-packages.git",
        "directory": "packages/deepkit-type-plugins"
    },
    "license": "MIT",
    "author": "Julien Papini <julien.papini@gmail.com> (https://github.com/jpapini)",
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "clean": "rimraf .turbo dist node_modules/.cache",
        "reset": "pnpm run clean; rimraf node_modules",
        "typecheck": "tsc --noEmit --pretty",
        "build": "tsup"
    },
    "devDependencies": {
        "@deepkit/type-compiler": "1.0.2",
        "esbuild": "0.25.1",
        "npm-run-all2": "7.0.2",
        "vite": "6.2.3"
    },
    "peerDependencies": {
        "@deepkit/type-compiler": "1"
    },
    "packageManager": "pnpm@10.6.5",
    "engines": {
        "node": "22",
        "pnpm": "10"
    },
    "volta": {
        "node": "22.14.0",
        "pnpm": "10.6.5"
    },
    "publishConfig": {
        "access": "public"
    }
}
