{
    "name": "@jpapini/{{ kebabCase packageName }}",
    "version": "0.0.1",
    "description": "{{ sentenceCase packageName }}.",
    "keywords": [
        "jpapini",
        "{{ kebabCase packageName }}",
        "tools"
    ],
    "homepage": "https://github.com/jpapini/shared-packages/tree/main/packages/{{ kebabCase packageName }}#readme",
    "bugs": {
        "url": "https://github.com/jpapini/shared-packages/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jpapini/shared-packages.git",
        "directory": "packages/{{ kebabCase packageName }}"
    },
    "license": "MIT",
    "author": "Julien Papini <julien.papini@gmail.com> (https://github.com/jpapini)",
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./package.json": "./package.json"
    },
